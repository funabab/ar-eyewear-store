---
import '@/styles/globals.css'
import Header from '@/components/header/Header.astro'
interface Props {
  title?: string
}

const { title = 'Eyewear AR' } = Astro.props
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width; user-scalable=no; initial-scale=1.0"
    />
    <title>{title}</title>
  </head>
  <body
    class="flex flex-col max-w-2xl mx-auto px-4 bg-[#f6f6f6] text-[#4b4b4b]"
  >
    <Header class="shrink-0" />
    <main class="flex-1">
      <slot />
    </main>
  </body>
</html>
